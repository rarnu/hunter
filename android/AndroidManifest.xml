<?xml version="1.0" encoding="utf-8"?>
<manifest
        xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.rarnu.hunter"
        android:versionCode="1"
        android:versionName="1.0">

    <uses-sdk android:targetSdkVersion="17" android:minSdkVersion="14"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher"
            android:theme="@style/Theme.Vicky">
        <activity
                android:name="MainActivity"
                android:label="@string/app_name"
                android:windowSoftInputMode="stateHidden"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".SettingsActivity"
                android:label="@string/title_settings"
                android:windowSoftInputMode="stateHidden"
                android:screenOrientation="portrait">
        </activity>
        <activity android:name=".JobDetailActivity"
                  android:label="@string/title_job_detail"
                  android:windowSoftInputMode="stateHidden"
                  android:screenOrientation="portrait">

        </activity>
        <activity
                android:name=".AdminDialog"
                android:windowSoftInputMode="stateHidden|adjustResize"
                android:screenOrientation="portrait"
                android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        </activity>
        <activity
                android:name=".ManageActivity"
                android:windowSoftInputMode="stateHidden"
                android:screenOrientation="portrait"
                android:label="@string/title_manage">

        </activity>
        <activity
                android:name=".ManageAddOrEditJobActivity"
                android:windowSoftInputMode="stateHidden"
                android:screenOrientation="portrait">

        </activity>
        <activity
                android:name=".ManageAddOrEditTimelineActivity"
                android:windowSoftInputMode="stateHidden"
                android:screenOrientation="portrait">

        </activity>
        <activity
                android:name=".ManageJobPropActivity"
                android:windowSoftInputMode="stateHidden"
                android:screenOrientation="portrait"
                android:label="@string/title_prop">

        </activity>
        <activity
                android:name=".InputDialog"
                android:windowSoftInputMode="stateHidden|adjustResize"
                android:screenOrientation="portrait"
                android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar">

        </activity>
    </application>
</manifest>
